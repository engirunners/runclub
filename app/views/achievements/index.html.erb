<%= head_info :title, 'Достижения' %>
<% head_info :description, 'Основные достижения участников клуба Engirunners' %>
<header class="header"></header>
<!-- Content -->
<div class="row mt-3 mx-1 mx-md-0">
  <div class="offset-md-1 col-md-10 pb-5">
    <h1 class="mb-3 text-center text-danger">Достижения</h1>
    <% @achievements.each do |achievement| %>
      <h2 class="mb-2"><%= achievement.title %></h2>
      <div class="achievement">
        <%= sanitized_text achievement.description %>
      </div>
    <% end %>
  </div>
</div>
<% render 'common/spacer' %>
