<!-- Header -->
<div class="py-5 bg-image-full" style="background-image: url('<%= asset_path 'plate.png' %>');">
  <div class="text-center my-2">
    <h1 class="text-dark fs-1 fw-bold">Эстафеты</h1>
  </div>
</div>
<!-- Content -->
<div class="row mt-2">
  <div class="offset-md-1 col-md-10">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Дата</th>
          <th scope="col">Название</th>
          <th scope="col">Наших команд</th>
        </tr>
      </thead>
      <tbody class="table-group-divider">
        <% @events_grouped_by_year.each do |year, events| %>
          <tr class="table-light table-active">
            <th colspan="3" class="text-danger text-center h3"><%= year %> год</th>
          </tr>
          <% events.each do |event| %>
            <tr>
              <th scope="row"><%= l event.date, format: :long %></th>
              <td><%= event.name %></td>
              <td><%= event.commands.size %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
